<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/shape_item_grid_subj"
    android:paddingBottom="18dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_name_subj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/open_sans"
        android:text="Tên môn học"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Số phần"
        android:textSize="14sp"
        android:textColor="#C4C4C4"
        android:fontFamily="@font/open_sans"
        app:layout_constraintStart_toStartOf="@+id/tv_name_subj"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_subj" />
</androidx.constraintlayout.widget.ConstraintLayout>